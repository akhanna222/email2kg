# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/email2kg
DB_PASSWORD=postgres

# ============================================
# EMAIL PROVIDER CONFIGURATION
# ============================================
# Choose your email provider: gmail, outlook, imap
EMAIL_PROVIDER=gmail

# Google OAuth (for Gmail)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# For production with HTTPS: Use your domain without port (nginx proxies to backend)
# Example: GOOGLE_REDIRECT_URI=https://agenticrag360.com/api/auth/google/callback
# For development: GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Microsoft Outlook OAuth (Optional - uncomment if using Outlook)
# OUTLOOK_CLIENT_ID=your_outlook_client_id
# OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
# OUTLOOK_REDIRECT_URI=http://localhost:8000/api/auth/outlook/callback

# IMAP Email Server (Optional - uncomment if using IMAP)
# IMAP_SERVER=imap.gmail.com
# IMAP_PORT=993
# IMAP_USERNAME=your_email@example.com
# IMAP_PASSWORD=your_app_password
# IMAP_USE_SSL=true

# ============================================
# MESSAGING PLATFORMS
# ============================================
# WhatsApp Business API (Optional - uncomment if using WhatsApp)
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
# WHATSAPP_APP_ID=your_facebook_app_id
# WHATSAPP_APP_SECRET=your_facebook_app_secret
# WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Telegram Bot API (Optional - uncomment if using Telegram)
# TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# TELEGRAM_BOT_USERNAME=your_bot_username
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# ============================================
# LLM CONFIGURATION
# ============================================
# LLM API Keys (choose one or both)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# ============================================
# APPLICATION SETTINGS
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ============================================
# AUTHENTICATION SETTINGS
# ============================================
# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Email Sync Settings
EMAIL_FETCH_MONTHS=3  # Number of months to fetch
EMAIL_SYNC_LIMIT=500  # Max emails to fetch per sync

# CORS Settings - Must include ALL origins that will access the API
# Format: JSON array with all frontend and backend URLs
# For production with HTTPS: Use https://yourdomain.com (without port if using standard 443)
# Example: ["http://localhost","http://localhost:3000","https://yourdomain.com","http://yourdomain.com:3000","http://yourdomain.com:8000"]
ALLOWED_ORIGINS=["http://localhost","http://localhost:3000"]

# Environment
ENVIRONMENT=development

# Storage (local or s3)
STORAGE_TYPE=local
# If using S3:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=your_bucket_name
# AWS_REGION=us-east-1
